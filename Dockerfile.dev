# syntax=docker/dockerfile:1
FROM node:20-alpine

WORKDIR /app

# Install deps first (use lockfile if present)
COPY package*.json ./
RUN npm ci --no-audit --no-fund --legacy-peer-deps || npm i --no-audit --no-fund --legacy-peer-deps

# Copy rest of the app (bind mount will override in dev)
COPY . .

EXPOSE 5173

CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]


